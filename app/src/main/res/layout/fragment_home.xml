<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/default_bg"
        android:contentDescription="@string/home_background_desc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:background="#80000000">

        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_marginBottom="16dp">

            <com.darexsh.veri_aristo.HomeCircleView
                android:id="@+id/circularProgress"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:padding="60dp"
                android:layout_gravity="center" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_days_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="17"
                    android:textSize="48sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_days_left_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/home_days_left"
                    android:textSize="18sp" />
            </LinearLayout>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_removal_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="16sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/home_removal_on_placeholder" />

        <TextView
            android:id="@+id/tv_secondary_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:autoSizeMaxTextSize="14sp"
            android:autoSizeMinTextSize="11sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/home_insertion_on_placeholder" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_delay_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_delay_info"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/round_icon_button"
            android:clickable="true"
            android:contentDescription="@string/home_delay_info_desc"
            android:focusable="true"
            android:padding="0dp"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_dialog_info"
            android:tint="#FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delay_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_delay_cycle"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:cornerRadius="12dp"
            app:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            app:elevation="2dp" />

    </LinearLayout>

</FrameLayout>
