<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/settings_title_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/settings_title"
            android:textSize="26sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_settings_info"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@string/settings_info_desc"
            android:src="@android:drawable/ic_dialog_info"
            android:tint="#6200EE" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_settings_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/settings_title_row"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="@string/settings_subtitle"
        android:textSize="13sp"
        android:textColor="?attr/colorOnBackground" />

    <ScrollView
        android:id="@+id/settings_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_settings_subtitle"
        android:layout_above="@id/advanced_container"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_cycle"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="0dp"
                app:cardCornerRadius="14dp">

                <LinearLayout
                    android:id="@+id/settings_cycle_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_set_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_set_start_date"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#6200EE"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_set_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_set_time"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#6200EE"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_set_cycle_length"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_set_cycle_length"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#6200EE"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_calendar"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="0dp"
                app:cardCornerRadius="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_set_calendar_range"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_set_calendar_range"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#6200EE"
                        android:textColor="#FFFFFF" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_notifications"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="0dp"
                app:cardCornerRadius="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_set_notification_times"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_set_notification_times"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#6200EE"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_design"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="0dp"
                app:cardCornerRadius="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_set_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_set_background"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#6200EE"
                        android:textColor="#FFFFFF" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_set_button_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_button_color_label"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#6200EE"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_set_circle_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_circle_color_label"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#6200EE"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="10dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_set_circle_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_circle_style_label"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#6200EE"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="10dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_language"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="?attr/colorOnBackground"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="0dp"
                app:cardCornerRadius="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_set_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/language_title"
                        android:textAllCaps="false"
                        android:textSize="15sp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#6200EE"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/debug_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/section_debug"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnBackground"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="?attr/colorSurface"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tv_debug_time_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/debug_time_status_system"
                            android:textSize="13sp"
                            android:textColor="?attr/colorOnBackground"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_debug_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/debug_time_switch_label"
                            android:layout_marginBottom="10dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_debug_set_time"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/btn_debug_set_time"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:gravity="center"
                                app:cornerRadius="12dp"
                                app:strokeColor="#6200EE"
                                app:strokeWidth="2dp"
                                android:textColor="#6200EE"
                                android:layout_marginEnd="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_debug_clear_time"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/btn_debug_clear_time"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:gravity="center"
                                app:cornerRadius="12dp"
                                app:strokeColor="#6200EE"
                                app:strokeWidth="2dp"
                                android:textColor="#6200EE" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_debug_info"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/btn_debug_info"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:gravity="center"
                                app:cornerRadius="12dp"
                                app:strokeColor="#6200EE"
                                app:strokeWidth="2dp"
                                android:textColor="#6200EE"
                                android:layout_marginEnd="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_debug_refresh"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/btn_debug_refresh"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:gravity="center"
                                app:cornerRadius="12dp"
                                app:strokeColor="#6200EE"
                                app:strokeWidth="2dp"
                                android:textColor="#6200EE" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_debug_jump_midnight"
                            style="?attr/materialButtonOutlinedStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_debug_jump_midnight"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            app:cornerRadius="12dp"
                            app:strokeColor="#6200EE"
                            app:strokeWidth="2dp"
                            android:textColor="#6200EE"
                            android:layout_marginBottom="10dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_debug_minus_day"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/btn_debug_minus_day"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:gravity="center"
                                app:cornerRadius="12dp"
                                app:strokeColor="#6200EE"
                                app:strokeWidth="2dp"
                                android:textColor="#6200EE"
                                android:layout_marginEnd="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_debug_plus_day"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/btn_debug_plus_day"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:gravity="center"
                                app:cornerRadius="12dp"
                                app:strokeColor="#6200EE"
                                app:strokeWidth="2dp"
                                android:textColor="#6200EE" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_debug_minus_hour"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/btn_debug_minus_hour"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:gravity="center"
                                app:cornerRadius="12dp"
                                app:strokeColor="#6200EE"
                                app:strokeWidth="2dp"
                                android:textColor="#6200EE"
                                android:layout_marginEnd="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_debug_plus_hour"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/btn_debug_plus_hour"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:gravity="center"
                                app:cornerRadius="12dp"
                                app:strokeColor="#6200EE"
                                app:strokeWidth="2dp"
                                android:textColor="#6200EE" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_debug_preset_removal_before"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/btn_debug_preset_removal_before"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:gravity="center"
                                app:cornerRadius="12dp"
                                app:strokeColor="#6200EE"
                                app:strokeWidth="2dp"
                                android:textColor="#6200EE"
                                android:layout_marginEnd="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_debug_preset_removal_at"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/btn_debug_preset_removal_at"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:gravity="center"
                                app:cornerRadius="12dp"
                                app:strokeColor="#6200EE"
                                app:strokeWidth="2dp"
                                android:textColor="#6200EE" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_debug_preset_insertion_before"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/btn_debug_preset_insertion_before"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:gravity="center"
                                app:cornerRadius="12dp"
                                app:strokeColor="#6200EE"
                                app:strokeWidth="2dp"
                                android:textColor="#6200EE"
                                android:layout_marginEnd="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_debug_preset_insertion_at"
                                style="?attr/materialButtonOutlinedStyle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="@string/btn_debug_preset_insertion_at"
                                android:textAllCaps="false"
                                android:textSize="14sp"
                                android:gravity="center"
                                app:cornerRadius="12dp"
                                app:strokeColor="#6200EE"
                                app:strokeWidth="2dp"
                                android:textColor="#6200EE" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/advanced_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#1F1F1F"
        android:paddingTop="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="6dp">

        <LinearLayout
            android:id="@+id/advanced_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tv_settings_advanced"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/section_advanced"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground" />

            <ImageButton
                android:id="@+id/btn_advanced_toggle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@null"
                android:contentDescription="@string/settings_advanced_toggle_desc"
                android:src="@android:drawable/arrow_down_float"
                android:tint="?attr/colorOnBackground" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/advanced_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_update_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_update_app"
                android:textAllCaps="false"
                android:textSize="15sp"
                app:cornerRadius="12dp"
                app:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_backup_manage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_backup"
                android:textAllCaps="false"
                android:textSize="15sp"
                app:cornerRadius="12dp"
                app:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_welcome_tour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_welcome_tour"
                android:textAllCaps="false"
                android:textSize="15sp"
                app:cornerRadius="12dp"
                app:backgroundTint="#6200EE"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reset_app"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_reset_app"
                android:textAllCaps="false"
                android:textSize="15sp"
                app:cornerRadius="12dp"
                app:strokeColor="#D32F2F"
                app:strokeWidth="2dp"
                android:textColor="#D32F2F" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
