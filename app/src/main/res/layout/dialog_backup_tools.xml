<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_backup_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/backup_create"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:cornerRadius="12dp"
        app:backgroundTint="#6200EE"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tv_backup_create_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/backup_hint_create"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="?attr/colorOnBackground"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_backup_restore"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/backup_restore"
        android:textAllCaps="false"
        android:textSize="15sp"
        app:cornerRadius="12dp"
        app:strokeColor="#6200EE"
        app:strokeWidth="2dp"
        android:textColor="#6200EE" />

    <TextView
        android:id="@+id/tv_backup_restore_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/backup_hint_restore"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="?attr/colorOnBackground"
        android:layout_marginTop="4dp" />

</LinearLayout>
