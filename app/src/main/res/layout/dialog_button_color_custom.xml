<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_custom_color_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_button_color_custom"
        android:textSize="13sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <com.darexsh.veri_aristo.HsvColorWheelView
            android:id="@+id/color_wheel"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1" />

        <View
            android:id="@+id/view_color_preview"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/color_preview_bg" />
    </LinearLayout>
</LinearLayout>
